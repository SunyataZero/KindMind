<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/versionTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Version"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/createdByTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Created By"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/createdByTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="Tord Dellsén\nsunyata.apps@gmail.com" />

        <TextView
            android:id="@+id/priceTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Price"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is completely cost-free as of this writing. This may change and there may be parts of the app that will be priced. My hope is that in the future this software will be open source and free (free as in freedom)" />

        <TextView
            android:id="@+id/privacyTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Privacy"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/privacyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This application is designed with the idea in mind to keep user data locally, google analytics is not used and backup is not done to any cloud service" />

        <TextView
            android:id="@+id/legalTitleTextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Legal"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/legalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Using this software, you are accepting the software &quot;as is&quot;. The developer will not be held responsible for any damages arising from use of the software. There is no warranty for this software" />
        
        <TextView
            android:id="@+id/photoCreditsTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Photo Credits"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/photoCreditsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="The KindMind white flower logo and icon (and some google play image resources) are based on a photo taken by Torgny Dellsén, the image is used with permission.
\n   http://torgnydellsen.zenfolio.com/" />

        <TextView
            android:id="@+id/thanksTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Thanks"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/thanksTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some of the sources of inspiration for this app: Jane McGonigal, Marshall Rosenberg and Nonviolent Communication (sm), Kristin Neff" />

        <TextView
            android:id="@+id/openSourceLicensesTitletextView"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Open Source Licenses"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/openSourceLicensesHoloColorsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Android Holo Colors
\n   http://android-holo-colors.com
\n   http://creativecommons.org/licenses/by/3.0/" />
        <TextView
            android:id="@+id/openSourceLicensesActionBarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Android Action Bar Style Generator
\n   http://jgilfelt.github.io/android-actionbarstylegenerator
\n   http://creativecommons.org/licenses/by/3.0/" />

        <!--
		<TextView
			android:id="@+id/shareTextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="20dp"
			android:textSize="20sp"
			android:text="Share app with a friend" />
        -->
    </LinearLayout>

</ScrollView>