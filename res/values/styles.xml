<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- Unused -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- Unused -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <!-- Uses AppThemeHoloColors as parent theme (see separate file generated by holo colors: themes_apptheme.xml) -->
	<style name="KindMindActionBarTheme" parent="AppThemeHoloColors">
	    <item name="android:actionBarStyle">@style/KindMindActionBar</item>
	    <!-- http://developer.android.com/reference/android/R.styleable.html#Theme_actionBarStyle -->
	</style>

	<style name="KindMindActionBar" parent="android:Widget.Holo.ActionBar">
	    <item name="android:background">#1A1A1A</item>
	</style>

</resources>
